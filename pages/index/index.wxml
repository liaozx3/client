<view id="header" class="tab">
  <view class="tab-item" wx:for="{{tabName}}" wx:for-index="idx" data-idx="{{idx}}" bindtap="switchTab">
    <text class="tab-text {{currentTab==idx ? 'active' : ''}}">{{item}}</text>
  </view>
</view>

<swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="slideTab" style="height: {{systemInfo.windowHeight}}px;" >
  <swiper-item wx:for="{{itemContainerList}}" wx:for-item="itemList">
    <scroll-view class="item-container" scroll-y="true">
      <block wx:for="{{itemList.list}}">
        <view class="item">
          <view class="image-container" data-item-id="{{item.itemId}}" bindtap="onItemClick">
            <image src="{{item.pic}}"
              mode="scaleToFill" class="special-image"
              style="width:{{systemInfo.windowWidth}}px;height:{{systemInfo.windowHeight/2.5}}px">
            </image>
          </view>
          <view class="item-info" bindtap="onItemClick">
            <view class="item-info-0">
              <text class="item-title">{{item.name}} </text>
              <text class="item-price">{{item.price}}</text>
            </view>
            <view class="item-info-1">
              <text class="item-title">{{item.place}} </text>
              <text class="item-price">{{item.state}}</text>
            </view>
          </view>
        </view>
      </block>
    </scroll-view>
  </swiper-item>
</swiper>








