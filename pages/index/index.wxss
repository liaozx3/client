#header {
    display: flex;
    border-bottom: 1px solid #eee;
}
.tab-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #000;
    margin-bottom: -1px;
}
.tab-text {
    display: block;
    padding: 10px;
    margin: auto;
}
.tab-text.active {
    border-bottom: 2px solid #89CBE0;
    color: #89CBE0;
    font-weight: bold;
}
.item-info {
  margin: auto
}
.item-info-0 {
  font-size: 20px;
}
.item-info-1 {
  font-size:15px;
}